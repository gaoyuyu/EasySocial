<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/tools"
    android:id="@+id/item_favorite_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_comment_selector"
    android:orientation="vertical"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="10dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <include
            layout="@layout/avatar_basic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="42dp"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/item_favorite_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp"
            android:text="favor me"
            android:textColor="@color/black"
            android:textSize="16sp"/>


    </LinearLayout>

    <LinearLayout
        android:padding="5dp"
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="42dp"
        android:background="@color/gray100"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_favorite_to_content"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/long_text"
            />
        
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/item_favorite_to_pic"
            android:layout_width="65dp"
            android:layout_height="65dp"
            fresco:failureImage="@mipmap/bg_pic_fail"
            fresco:placeholderImage="@mipmap/bg_pic_loading"
            fresco:retryImage="@mipmap/bg_pic_retry"
            />

    </LinearLayout>


    <TextView
        android:id="@+id/item_favorite_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="42dp"
        android:layout_marginTop="15dp"
        android:text="2016-3-14"
        android:textColor="@color/gray600"
        android:textSize="13sp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="5dp"
        android:background="@color/black"/>

</LinearLayout>
