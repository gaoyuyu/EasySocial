<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/item_home_avatar"
        android:layout_width="42dp"
        android:layout_height="42dp"
        fresco:placeholderImage="@drawable/user_icon_default_main"
        fresco:placeholderImageScaleType="fitCenter"
        fresco:roundedCornerRadius="180dp"/>

    <TextView
        android:id="@+id/item_home_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@+id/item_home_avatar"
        android:text="大雁南下"
        android:textColor="@color/black"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/item_home_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/item_home_account"
        android:layout_below="@+id/item_home_account"
        android:layout_marginTop="2dp"
        android:text="昨天 13:30 皮皮时光机"
        android:textAppearance="?android:attr/textAppearanceSmall"/>

</RelativeLayout>
