<?xml version="1.0" encoding="utf-8"?>
<com.balysv.materialripple.MaterialRippleLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    app:mrl_rippleAlpha="0.2"
    app:mrl_rippleColor="@color/gray600"
    app:mrl_rippleOverlay="true"
    >

    <LinearLayout
        android:id="@+id/item_plugin_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector"
        android:orientation="horizontal"
        android:padding="25dp">

        <ImageView
            android:id="@+id/item_plugin_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/ic_share_gray"/>

        <TextView
            android:id="@+id/item_plugin_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_plugin_img"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="News"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/item_plugin_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_plugin_img"
            android:layout_gravity="center_vertical|right"
            android:layout_marginLeft="30dp"
            android:text="News"
            android:textColor="@color/gray600"/>
    </LinearLayout>

</com.balysv.materialripple.MaterialRippleLayout>

