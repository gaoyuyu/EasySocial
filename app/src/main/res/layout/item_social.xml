<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    android:orientation="horizontal">


    <LinearLayout
        android:id="@+id/item_home_fav_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:id="@+id/item_home_fav_label"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/ic_favorite"/>

        <TextView
            android:id="@+id/item_home_fav_count"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="921"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        >

        <LinearLayout
            android:id="@+id/item_home_com_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:id="@+id/item_home_com_label"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/ic_comment"/>

            <TextView
                android:id="@+id/item_home_com_count"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="921"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_home_share_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:id="@+id/item_home_share_label"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/ic_share_gray"/>

            <TextView
                android:id="@+id/item_home_share_count"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text=""/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
