<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="10dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <include
            android:id="@+id/include"
            layout="@layout/avatar_basic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/item_comment_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="1楼"
                android:textColor="@color/gray"
                android:textSize="10sp"
                />

        </LinearLayout>
    </LinearLayout>


    <TextView
        android:id="@+id/item_comment_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/include"
        android:layout_marginStart="42dp"
        android:layout_marginTop="5dp"
        android:text="中二之魂"
        android:textColor="@color/black"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/item_comment_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="42dp"
        android:layout_marginTop="15dp"
        android:text="2016-3-14"
        android:textColor="@color/gray600"
        android:textSize="13sp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignStart="@+id/item_comment_text"
        android:layout_below="@+id/item_comment_text"
        android:layout_marginStart="42dp"
        android:layout_marginTop="5dp"
        android:background="@color/black"/>

</LinearLayout>
